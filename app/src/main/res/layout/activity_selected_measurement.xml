<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedMeasurementActivity">

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:id="@+id/measurementTitle"
        android:text="@string/title"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:id="@+id/measurementDate"
        android:text="@string/date"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/measurementTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:id="@+id/measurementArms"
        android:text="@string/arms"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/measurementDate"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:id="@+id/measurementLegs"
        android:text="@string/legs"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/measurementArms"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:id="@+id/measurementChest"
        android:text="@string/chest"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/measurementLegs"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:id="@+id/measurementWaist"
        android:text="@string/waist"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/measurementChest"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:id="@+id/measurementShoulders"
        android:text="@string/shoulders"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/measurementWaist"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:id="@+id/measurementCalves"
        android:text="@string/calves"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/measurementShoulders"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/measurementTitleTV"
        android:textSize="20sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="@id/measurementTitle"
        app:layout_constraintLeft_toRightOf="@id/measurementTitle"
        app:layout_constraintBottom_toBottomOf="@id/measurementTitle"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/measurementDateTV"
        android:textSize="20sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="@id/measurementDate"
        app:layout_constraintLeft_toRightOf="@id/measurementDate"
        app:layout_constraintBottom_toBottomOf="@id/measurementDate"
        app:layout_constraintRight_toRightOf="parent"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/measurementArmsTV"
        android:textSize="20sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="@id/measurementArms"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/measurementArms"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/measurementLegsTV"
        android:textSize="20sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="@id/measurementLegs"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/measurementLegs"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/measurementChestTV"
        android:textSize="20sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="@id/measurementChest"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/measurementChest"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/measurementWaistTV"
        android:textSize="20sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="@id/measurementWaist"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/measurementWaist"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/measurementShouldersTV"
        android:textSize="20sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="@id/measurementShoulders"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/measurementShoulders"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/measurementCalvesTV"
        android:textSize="20sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="@id/measurementCalves"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/measurementCalves"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/measurementShareButton"
        android:text="SHARE"
        android:layout_marginLeft="160dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>